{% extends "layout.njk" %}

    <link rel="stylesheet" href="/styles/partials/form.css">
    
{% block title %}
    <title>Edição de consulta</title>
{% endblock title %}

{% block fail %}
{% endblock fail %}

{% block cards %}
{% endblock cards %}

{% block content %}

<div class="container-profissional">
     {%include "parts/sub-header.njk"%}

     <section class ="gender" >
        <H1>Alterando dados da consulta</H1>
     </section>
     
     <aside>
         <div class="card-table">
                <form  method="POST" action="/consultas?_method=PUT">
                         <div class="details">
                        {%include  "consultas/fields.njk"%}
                         <button class="enviar" type="submit">Salvar</button>
                        {%if session.userId == 24 %}
                        <button class =delete type="submit" form ="form-delete">Deletar</button> 
                        {%endif%}
                        </div>
                        <input type="hidden" name="id"value={{consulta.id}}> 

                </form>
                       
                 <form id="form-delete"   method="POST" action="/consultas?_method=DELETE">
                        <input type="hidden" name="id"value={{consulta.id}}> 
                </form>
            </div>
     </aside>
</div> 


{% endblock content %}
