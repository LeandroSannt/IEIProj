{% extends "layout.njk" %}     
       
{% block title %}
    <title>Profissionais</title>
{% endblock title %}

{% block fail %}
{% endblock fail %}

{% block cards %}
{% endblock cards %}

{% block content %}

<div class="container-profissional">
     {%include "parts/sub-header.njk"%}

        <section class ="gender" >
            <H1>Profissionais</H1>
        </section>
     
     <aside>
         <div class="card-table">
            <form class="form-profissional" action="/profissionais" method ="GET">
                <input type="text" name ="filter" class ="form-check-input" placeholder="Pesquisar por nome ou especialidade">
                <button type="submit" class ="btn btn-info">Pesquisar</button>
            </form>
            <table class="table-container"> 
                <thead>
                    <tr>
                        <th>Nome do profissional</th>
                        <th>Especialidade</th>
                           {%if session.userId == 1 %}
                            <th></th>
                            {%endif%}
                    </tr>
                 </thead>

                    <tbody>
                     {% for profissional in profissionais %}
                        <tr>
                            <td>{{profissional.nome}}</td>
                            <td>{{profissional.especialidade}}</td>
                            {%if session.userId == 1 %}
                            <td><a href="profissionais/detalhes/{{profissional.id}}">Ver</a></td>
                            {%endif%}
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
         </div>
     </aside>
</div>

{% endblock content %}