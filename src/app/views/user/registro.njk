<html lang="PT-br">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/styles/partials/login.css">
    <link rel="stylesheet" href="/styles/partials/messages.css">
    <title>Login</title>
</head>

<body>
    <section class="section-form">
    {%include "parts/messages.njk"%}
        <div class="user-img">
            <i class="fas fa-user-alt"></i>
        </div>
        <div class="quote">
            <h1>Cadastro de Usu√°rio</h1>
        </div>
        <form  method ="POST" action="/user/registro">

             <label for="nome">
                <div class="form-group">
                        <input type="text" name="nome" placeholder= "Digite seu nome " id ="nome" value="{{user.nome}}"required>
                </div>
            </label>

             <label for="email">
                <div class="form-group">
                        <input type="email" name="email" placeholder= "Digite seu email" id ="email" value="{{user.email}}"required>
                </div>
            </label>

            <label for="cpf_cnpj">
                <div class="form-group">
                    <input type="text" name="cpf_cnpj"  placeholder="cpf ou cnpj" onkeydown="Mask.apply(this, 'cpfCnpj')" value="{{user.cpf_cnpj}}", id="cpf_cnpj" required>
                    </div>
            </label>

             <label for="senha">
                <div class="form-group">
                        <input type="password" name="senha" placeholder= "Digite uma senha" id ="senha"required>
                </div>
            </label>

             <label for="repeatSenha">
                <div class="form-group">
                        <input type="password" name="senhaRepeat" placeholder= "Repita sua senha" id ="repeatSenha"required>
                </div>
            </label>
            
            <button type="submit" class="btn btn-login">Salvar</a>
        </form>
    </section> 
